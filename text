    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".msd_label").click(function () {
                $(this).siblings(".msd_options_container").toggle();
            });
            $(".js-msdCheck").change(function () {
                const selectedItem = $(this).parent('label').text().trim();
                const container = $(this).closest('td').find('.selected-items');
                if ($(this).prop("checked")) {
                    container.append('<div class="selected-item">' + selectedItem + '<span class="remove" data-value="' + $(this).val() + '">&times;</span></div>');
                } else {
                    container.find('.remove[data-value="' + $(this).val() + '"]').parent('.selected-item').remove();
                }
            });
            $(document).on('click', '.remove', function () {
                const value = $(this).data('value');
                $(this).parent('.selected-item').remove();
                $('.js-msdCheck[value="' + value + '"]').prop("checked", false);
            });
            $(document).click(function (e) {
                if (!$(e.target).closest('.msd').length) {
                    $(".msd_options_container").hide();
                }
            });
            $(".js-msds").click(function (e) {
                e.stopPropagation();
            });
            $(".js-msdCheck").each(function () {
                const containerId = $(this).closest('td').find('.selected-items').attr('id');
                if ($(this).prop("checked")) {
                    const selectedItem = $(this).parent('label').text().trim();
                    $('#' + containerId).append('<div class="selected-item">' + selectedItem + '<span class="remove" data-value="' + $(this).val() + '">&times;</span></div>');
                }
            });
            const body = document.querySelector("body"),
                sidebar = body.querySelector("nav"),
                toggle = body.querySelector(".toggle"),
                searchBtn = body.querySelector(".search-box"),
                modeSwitch = body.querySelector(".toggle-switch"),
                modeText = body.querySelector(".mode-text");
            toggle.addEventListener("click", () => {
                sidebar.classList.toggle("close");
            });
            searchBtn.addEventListener("click", () => {
                sidebar.classList.remove("close");
            });
        });
    </script>
</body>
